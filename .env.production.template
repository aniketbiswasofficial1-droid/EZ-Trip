# Production Environment Template
# Copy this file to .env in the root directory and fill in your actual values

# ================================
# Backend Configuration
# ================================

# LLM API Configuration
EMERGENT_LLM_KEY=your_emergent_api_key_here
# Alternative: OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/
DB_NAME=production_database

# Email Service Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@eztrip.com

# Security
JWT_SECRET_KEY=your_very_secure_random_secret_key_here
SESSION_SECRET=another_very_secure_random_secret_key_here

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (comma-separated allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/app/backend/uploads

# Rate Limiting (optional)
RATE_LIMIT_PER_MINUTE=60

# ================================
# Frontend Configuration
# ================================

# API Endpoint
REACT_APP_API_URL=https://api.yourdomain.com

# Google OAuth (Frontend)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
