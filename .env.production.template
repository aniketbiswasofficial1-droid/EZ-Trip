# Production Environment Template
# Copy this file to .env in the root directory and fill in your actual values
# IMPORTANT: Never commit the actual .env file with real credentials!

# ================================
# Backend Configuration
# ================================

# LLM API Configuration
# Use Emergent or OpenAI API key from your provider
EMERGENT_LLM_KEY=your_emergent_api_key_here
# Alternative: OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration
# Production credentials should be different from development
# Ensure authorized redirect URIs include your production domain
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
# For production, use a managed MongoDB service or secure instance
MONGODB_URI=mongodb://mongodb:27017/
DB_NAME=production_database

# Email Service Configuration (for notifications)
# Production recommendation: Use a transactional email service like SendGrid or AWS SES
# For Gmail: Create an App-Specific Password (requires 2FA)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM_ADDRESS=EZ Trip <noreply@eztrip.com>
EMAIL_FROM_NAME=EZ Trip

# Security
# Generate strong random keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_very_secure_random_secret_key_here
SESSION_SECRET=another_very_secure_random_secret_key_here

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (comma-separated allowed origins)
# Include all domains that will access your API (including www and non-www versions)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL (used for email links and redirects)
FRONTEND_URL=https://yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/app/backend/uploads

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# ================================
# Frontend Configuration
# ================================

# API Endpoint
# Should point to your production backend URL
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_BACKEND_URL=https://api.yourdomain.com

# Google OAuth (Frontend)
# Must match the client ID configured in backend
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# ================================
# Docker Configuration (Production)
# ================================

# MongoDB Connection (for Docker Compose)
MONGO_URL=mongodb://mongodb:27017

# ================================
# Security Notes
# ================================
# 1. Use strong, unique passwords for all services
# 2. Enable 2FA on all external accounts (Google, email providers)
# 3. Regularly rotate API keys and secrets
# 4. Use environment-specific credentials (don't reuse dev credentials in production)
# 5. Consider using a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
# 6. Ensure MongoDB is secured with authentication in production
# 7. Use HTTPS/TLS for all production services
