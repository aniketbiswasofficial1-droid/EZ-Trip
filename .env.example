# EZ-Trip Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# Backend Configuration
# ================================

# LLM API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Google OAuth Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
DB_NAME=eztrip_db

# Email Service Configuration (for notifications)
# For Gmail: Enable 2FA and create an App Password at https://myaccount.google.com/apppasswords
# For Outlook: Use your account password at https://outlook.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM_ADDRESS=EZ Trip <your_email@gmail.com>
EMAIL_FROM_NAME=EZ Trip

# CORS Settings (comma-separated allowed origins)
# For development: http://localhost:3000,http://127.0.0.1:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# Frontend Configuration
# ================================

# Google OAuth (Frontend)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Backend URL
# For Docker: http://localhost:8000
# For production: https://api.yourdomain.com
REACT_APP_BACKEND_URL=http://localhost:8000

# ================================
# Docker Configuration
# ================================

# MongoDB Connection (for Docker)
MONGO_URL=mongodb://mongodb:27017
